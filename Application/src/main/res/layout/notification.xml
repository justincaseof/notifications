<!-- Layout for the collapsed notification. -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:gravity="center_horizontal"
    android:layout_height="fill_parent">

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:srcCompat="@drawable/timericon"
        android:id="@+id/icon_notification"
        android:layout_weight="1" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginStart="20dp"
        >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:textSize="8sp"
                    android:text="target"
                    android:textColor="@android:color/black"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:id="@+id/textView_ip"
                    android:layout_weight="1" />

                <TextView
                    android:textSize="8sp"
                    android:text="target"
                    android:textColor="@android:color/black"
                    android:layout_width="match_parent"
                    android:id="@+id/textView_relaisState"
                    android:layout_weight="1"
                    android:layout_height="10dp" />

                <!--<TextView-->
                    <!--android:textSize="8sp"-->
                    <!--android:text="target"-->
                    <!--android:textColor="@android:color/black"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:id="@+id/textView_secondsRemaining"-->
                    <!--android:layout_weight="1"-->
                    <!--android:layout_height="10dp" />-->
            </LinearLayout>

            <ImageButton
                android:id="@+id/button_configure"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:src="@drawable/ic_stat_configure"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <Button
                android:textSize="8sp"
                android:text="10min"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:id="@+id/button_set10min"
                android:layout_weight="1" />

            <Button
                android:textSize="8sp"
                android:text="30min"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:id="@+id/button_set30min"
                android:layout_weight="1" />

            <Button
                android:textSize="8sp"
                android:text="60min"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:id="@+id/button_set60min"
                android:layout_weight="1" />

            <Button
                android:textSize="8sp"
                android:text="90min"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:id="@+id/button_set90min"
                android:layout_weight="1" />
            <Button
                android:textSize="8sp"
                android:text="on"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:id="@+id/button_on"
                android:layout_weight="1" />
            <Button
                android:textSize="8sp"
                android:text="off"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:id="@+id/button_off"
                android:layout_weight="1" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
