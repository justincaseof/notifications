<!-- Layout for the collapsed notification. -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal">

    <TextView
        android:textSize="8sp"
        android:text="lala - 123"
        android:textColor="@android:color/black"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/textView"
        android:layout_weight="1" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_weight="1">

        <Button
            android:textSize="8sp"
            android:text="10min"
            android:layout_width="55dp"
            android:layout_height="35dp"
            android:id="@+id/button_set10min" />

        <Button
            android:textSize="8sp"
            android:text="30min"
            android:layout_width="55dp"
            android:layout_height="35dp"
            android:id="@+id/button_set30min"
            android:layout_weight="1" />

        <Button
            android:textSize="8sp"
            android:text="60min"
            android:layout_width="55dp"
            android:layout_height="35dp"
            android:id="@+id/button_set60min"
            android:layout_weight="1" />

        <Button
            android:textSize="8sp"
            android:text="90min"
            android:layout_width="55dp"
            android:layout_height="35dp"
            android:id="@+id/button_set90min"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/ImageButton01"
            android:layout_width="55dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_notification_timer"
            />

    </LinearLayout>

</LinearLayout>
